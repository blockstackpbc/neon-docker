# pull_repo.service
[Unit]
Description=Update bitcoin-docker Repo
ConditionPathExists=/mnt/stateful_partition/bitcoind
Requires=clone_repo.service
After=clone_repo.service

[Service]
Type=simple
ExecStart=/usr/bin/git -C /mnt/stateful_partition/bitcoind pull
ExecStartPost=/usr/bin/rsync -av --exclude='/mnt/stateful_partition/bitcoind/unit-files/nginx.service' /mnt/stateful_partition/bitcoind/unit-files/ /etc/systemd/system/
ExecStartPost=/usr/bin/systemcl daemon-reload

[Install]
WantedBy=multi-user.target
